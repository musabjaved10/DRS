<% layout("./layout/boilerplate") %>


<div class="container-fluid">
    <div class="row pb-3 ">
        <div class="col-12">
            <h1 class="text-center d-block">Add New Room</h1>
        </div>
        <div class="col-md-6 offset-md-3 bg-gradient-success">
            <form action="/adddesk" method="post" >
                <div class="mb-3">
                    <label class="form-label text-white" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="desk_name" required>

                </div>


                <div class="mb-3">
                    <label for="validationCustom04" class="text-white">Room</label>
                    <select class="custom-select" id="validationCustom04" name="floor_id" required>
                        <option selected disabled >Select Room...</option>
                        <%for(let room of rooms){%>
                        <option  value='<%=room.room_id%>'><%=room.room_name%></option>
                        <%}%>

                    </select>
                    <div class="invalid-feedback">
                        Please select a valid Room.
                    </div>
                </div>



                <div class="mb-3">
                    <button class="btn btn-success" >Add Desk</button>
                </div>
            </form>

        </div>
    </div>
    <!-- Row container -->
    <div class="row">
        <%for(let desk of desks){%>
        <!-- Available card sinppet -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h4 mb-0 font-weight-bold text-gray-800">
                                <%=desk.desk.desk_name%></div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-sm-6 d-flex align-items-center">
                                <span class="myLabel available">
                                    <b>Available</b>
                                </span>

                            </div>

                            <div class="col-sm-6 d-flex align-items-center justify-content-end">
                                <form action="/deleteroom" method="post" onsubmit="return confirm('Warning:\nDeleting this desk. Confirm?');">
                                    <div class="d-none">
                                        <input type="text" value="<%=desk.desk.desk_id%>" name="room_id">

                                    </div>
                                    <button type="submit" class="btn btn-danger btn-circle btn-sm py-1"><i class="fas fa-trash"></i></button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%}%>

    </div>

</div>