<% layout("./layout/boilerplate") %>


<div class="container-fluid">
    <div class="row pb-3 ">
        <div class="col-12">
            <h1 class="text-center d-block">Add New Floor</h1>
        </div>
        <div class="col-md-6 offset-md-3 bg-gradient-info">
            <form action="/addfloor" method="post" >
                <div class="mb-3">
                    <label class="form-label text-white" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="floor_name" required>

                </div>

                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label text-white">Image path</label>
                    <input class="form-control" type="file" name="floor_image">
                </div>


                <div class="mb-3">
                    <label class="form-label text-white" for="location">No.of Rooms</label>
                    <input class="form-control" type="text" id="location" name="total_rooms" required>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" >Make new floor</button>
                </div>
            </form>

        </div>
    </div>
    <!-- Row container -->
    <div class="row">
        <%for(let floor of floors){%>

        <!-- Available card sinppet -->
        <div class="col-xl-4 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-0">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="h4 mb-0 font-weight-bold text-gray-800">
                                <%=floor.floor_name%></div>
                        </div>
                    </div>
                    <div class="mt-3">
                        <div class="row">
                            <div class="col-sm-6 d-flex align-items-center">
                                <span class="myLabel available">
                                    <b><%=floor.total_rooms%> rooms</b>
                                </span>

                            </div>

                            <div class="col-sm-6 d-flex align-items-center justify-content-end">
                                <form action="/deletefloor" method="post" onsubmit="return confirm('Warning:\nThis floor,its rooms and desks will be deleted.Confirm?');">
                                    <div class="d-none">
                                        <input type="text" value="<%=floor.floor_id%>" name="floor_id">
                                        <input type="text" value="<%=floor.floor_name%>" name="floor_name">
                                    </div>
                                    <button type="submit" class="btn btn-danger btn-circle btn-sm py-1"><i class="fas fa-trash"></i></button>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%}%>

    </div>

</div>